generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Boards {
  id            Int   @id @default(autoincrement())
  title         String
  image_url     String
  author        String
  category      String
}

model Cards {
  id            Int   @id @default(autoincrement())
  board_id      Int
  title         String
  author        String
  image_url     String
  upvotes       Int
  message       String
}

model Comments {
  id            Int   @id @default(autoincrement())
  card_id       Int
  comments      String
  author        String
}